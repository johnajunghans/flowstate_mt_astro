---
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/global.css";
import Header from "../components/Header.astro";
import Accordion from "../components/Accordion.jsx";
import Slate from "../components/Slate.astro";
import * as patMD from "./../content/phil-patience.md";
import * as indMD from "./../content/phil-independence.md";
import * as humMD from "./../content/phil-humor.md";

const header1 = "During sessions, I consciously cultivate an atmosphere of...";
const header2 = "From students, I expect...";

const philData1 = [
  {
    key: 1,
    title: "Patience",
    content: patMD.compiledContent(),
  },

  {
    key: 2,
    title: "Independence",
    content: indMD.compiledContent(),
  },
  {
    key: 3,
    title: "Humor",
    content: humMD.compiledContent(),
  },
];

const philData2 = [
  {
    key: 1,
    title: "Responsibility",
    content: ["hello", "hello", "hello"],
  },
  {
    key: 2,
    title: "Respect",
    content: ["hello", "hello", "hello"],
  },
  {
    key: 3,
    title: "Hard Work",
    content: ["hello", "hello", "hello"],
  },
];
---

<BaseLayout title="FlowState Math Tutoring - Philosophy">
  <Header pageHeader="Philosophy">
    <Accordion data={philData1} header={header1} client:load />
    <Accordion data={philData2} header={header2} client:load />
  </Header>
</BaseLayout>

<style>
  .accordion-header-text {
    font-family: cursive;
  }
</style>
